RRewriteEngine On 
# 1. Redirigir la raíz del dominio a /pages 
RewriteRule ^$ pages/Login [L] 
# 2. Evitar redirección infinita si ya está en /pages 
RewriteCond %{REQUEST_URI} !^/pages/Login 
# 3. URL amigable: /algo → /pages/algo.php 
RewriteCond %{REQUEST_FILENAME} !-f RewriteCond %{REQUEST_FILENAME} !-d RewriteRule ^([^/]+)/?$ pages/$1.php [L] 
# 4. URL amigable para subcarpetas (opcional) 
RewriteCond %{REQUEST_FILENAME} !-f RewriteCond %{REQUEST_FILENAME} !-d RewriteRule ^(.+)/?$ pages/$1.php [L]
